# JoyCoin Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
APP_ENV=dev

# Database Configuration
DB_URL=postgresql://user:password@localhost:5432/joycoin

# JWT Authentication
JWT_SECRET=your-secret-key-minimum-32-characters-long
JWT_EXPIRE_MIN=20

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# USDT Deposit Address
USDT_ADMIN_ADDRESS=TY7xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Super Admin (First Admin Account)
SUPER_ADMIN_EMAIL=admin@joycoin.com
SUPER_ADMIN_PASSWORD=your-secure-password-here

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Get chat ID by messaging your bot and checking https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHAT_ID=123456789
